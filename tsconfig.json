{
  "compilerOptions": {
    // 컴파일 대상 ECMAScript 버전 (최신 브라우저와 Node.js 환경 지원)
    "target": "ESNext",
    // 모듈 시스템 설정 (Node.js와 브라우저 호환)
    "module": "ESNext",
    // 엄격한 타입 검사 활성화 (타입스크립트의 강력한 타입 검사 기능)
    "strict": true,
    // 선언 파일 자동 생성
    "declaration": true,
    // 소스맵 생성 (디버깅에 유용)
    "sourceMap": true,
    // import할 때 파일 확장자 없이 사용 가능
    "moduleResolution": "node",
    // 타입 정의 파일 경로 지정
    "typeRoots": ["./node_modules/@types"],
    // 불필요한 파일 제외
    "skipLibCheck": true,
    // 모든 선언된 변수 사용 강제
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // 암시적 any 타입 금지
    "noImplicitAny": true,
    // 출력 디렉토리 설정
    "outDir": "./dist",
    // 소스 파일 루트 디렉토리
    "rootDir": "./src"
  }
}
